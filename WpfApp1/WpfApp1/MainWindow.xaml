<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">

    <Grid x:Name="MainRoot" Background = "White">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0" Text="" Grid.ColumnSpan="4" x:Name="TextLable"/>
        <Button Grid.Row="1" Grid.Column="0" Background="#FF707070" Foreground="White" BorderBrush="#FF707070" >1</Button>
        <Button Grid.Row="1" Grid.Column="1" Background="#FF707070" Foreground="White" BorderBrush="#FF707070">2</Button>
        <Button Grid.Row="1" Grid.Column="2" Background="#FF707070" Foreground="White" BorderBrush="#FF707070">3</Button>
        <Button Grid.Row="1" Grid.Column="3" Background="#FF707070" Foreground="White" BorderBrush="#FF707070">=</Button>
        <Button Grid.Row="2" Grid.Column="0" Background="#FF707070" Foreground="White" BorderBrush="#FF707070">4</Button>
        <Button Grid.Row="2" Grid.Column="1" Background="#FF707070" Foreground="White" BorderBrush="#FF707070">5</Button>
        <Button Grid.Row="2" Grid.Column="2" Background="#FF707070" Foreground="White" BorderBrush="#FF707070">6</Button>
        <Button Grid.Row="2" Grid.Column="3" Background="#FF707070" Foreground="White" BorderBrush="#FF707070">+</Button>
        <Button Grid.Row="3" Grid.Column="0" Background="#FF707070" Foreground="White" BorderBrush="#FF707070">8</Button>
        <Button Grid.Row="3" Grid.Column="1" Background="#FF707070" Foreground="White" BorderBrush="#FF707070">9</Button>
        <Button Grid.Row="3" Grid.Column="2" Background="#FF707070" Foreground="White" BorderBrush="#FF707070">0</Button>
        <Button Grid.Row="3" Grid.Column="3" Background="#FF707070" Foreground="White" BorderBrush="#FF707070">-</Button>
        <Button Grid.Row="4" Grid.Column="0" Background="#FF707070" Foreground="White" BorderBrush="#FF707070">AC</Button>
        <Button Grid.Row="4" Grid.Column="1" Background="#FF707070" Foreground="White" BorderBrush="#FF707070">00</Button>
        <Button Grid.Row="4" Grid.Column="2" Background="#FF707070" Foreground="White" BorderBrush="#FF707070">/</Button>
        <Button Grid.Row="4" Grid.Column="3" Background="#FF707070" Foreground="White" BorderBrush="#FF707070">*</Button>


    </Grid>
</Window>
